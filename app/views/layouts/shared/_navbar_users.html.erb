<% if ['new'].include?(action_name) %>
    <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1">Novo contato</h1>
<% elsif ['edit'].include?(action_name) %>  
    <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1">Editando contato</h1>
<% else %> 
    <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1">Usuários</h1>
    <%= link_to 'Novo usuário', new_account_user_path(current_user.account), class: 'btn-secondary'%>
<% end %>