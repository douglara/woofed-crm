<%= turbo_stream_from @deal.primary_contact.id, 'events' %>



    <%
=begin%>
 <div>
      <header class="text-center m-3">
        <span class="badge badge-light">Planned</span>
      </header>
      <div class="activities">
        <% events.planned.each do | event | %>
          <%= render "/accounts/contacts/events/event", event: event %>
        <% end %>
      </div>
    </div> 
<%
=end%>

    <div>
      <%
=begin%>
 <header class="text-center m-3">
        <span class="badge badge-light">Done</span>
      </header> 
<%
=end%>

      
        <div class="col-12">
          <div class="card chat-box">
            <div class="card-body chat-content">
            <%= turbo_frame_tag 'events' do %>
              <%= render partial: 'accounts/contacts/events/event', collection: events %>
            <% end %>
          </div>

          <div class="card-footer">
            <div>
            </div>
          </div>
            <%= turbo_frame_tag "new-event-form", src: new_account_contact_event_path(account_id: current_user.account, contact_id: @deal.primary_contact.id, deal_id: @deal.id) %>
        </div>
     
    </div>
