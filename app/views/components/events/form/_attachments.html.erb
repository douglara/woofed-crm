<div class="border-t border-light-palette-p3 p-3 mt-4 grid gap-2.5 <%= ['new', 'new_bulk_action'].include?(action_name) ? '' : 'hidden'%> " >
  <p class="typography-text-m-lh150 text-dark-gray-palette-p1"> Arquivos </p>
  <div class='flex gap-2.5 items-center'>
    <div class='btn-secondary p-2.5 cursor-pointer' data-action="click->upload-files#trigger">
      <i data-lucide="paperclip"></i>
    </div>
    <%# <div class='btn-secondary p-2.5 cursor-pointer' data-action="click->upload-files#trigger">
      <i data-lucide="mic"></i>
    </div> %>
    <div class="flex-1 w-full">
    </div>
  </div>
  <div id='uploads' class="max-h-56 grid gap-4 overflow-y-auto custom-scroll-list-deal">
    <div class='hidden p-1 pr-2 border border-light-palette-p3 rounded-lg flex items-center gap-10 ' id='fileWrapper' >
      <div id='fileInfoWrapper'>
        <a href="" class='flex gap-4 items-center' id='linkThumb'>
          <img src="" class='w-10 h-10 rounded-lg object-cover' id='fileThumb'>
          <p class='text-dark-gray-palette-p1 typography-text-m-lh150 w-56 truncate' id='fileName'></p>
        </a>
      </div>
      <div class='flex-1 w-full' id='uploadInfo'>
        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700 flex-1" id="progressWrapper">
          <div class="bg-brand-palette-03 h-2.5 rounded-full ease-in duration-300" id="progressBar" style="width: 0%"></div>
        </div>
      </div>
      <div class="p-2.5 cursor-pointer" data-action="click->upload-files#removeFile">
        <img src="<%= asset_path('xmark-solid.svg') %>" alt="" class="w-4" >
      </div>
    </div>
    <input type="file" class="hidden" multiple data-upload-files-target="fileInput" data-action="change->upload-files#acceptFiles" name="event[files][]"/>
  </div>
</div>
