<% if event.chatwoot_message? %>
  <%= render "components/events/form/chatwoot_message", event: event, url: account_contact_events_path(current_user.account, event.deal.contact, stage_id: event.deal.stage), edit_event_form: false %>
<% elsif event.activity? %>
  <%= render "components/events/form/activity", event: event, url: account_contact_events_path(current_user.account, event.deal.contact, stage_id: event.deal.stage), edit_event_form: false %>
<% elsif event.note? %>
  <%= render "components/events/form/note", event: event, url: account_contact_events_path(current_user.account, event.deal.contact, stage_id: event.deal.stage), edit_event_form: false %>
<% elsif event.evolution_api_message? %>
  <%= render "components/events/form/evolution_api_message", event: event, url: account_contact_events_path(current_user.account, event.deal.contact, stage_id: event.deal.stage), edit_event_form: false %>
<% else %>
  <div class="px-4 py-5 items-center text-center events-form-active" >
    <div class="flex justify-center items-center flex-col mt-4">
      <div class="border-2 rounded-md flex justify-center items-center text-center w-11 h-11 border-brand-palette-07 bg-brand-palette-08">
        <i data-lucide="layout-grid" class="text-brand-palette-03"></i>
      </div>
    </div>
    <div class="m-3">
      <p class="font-semibold mb-0 typography-body-s-lh150 text-dark-gray-palette-p1">Adicionar atividade</p>
      <p class="typography-text-r-lh150 text-dark-gray-palette-p3">Clique aqui ou nos campos acima para adicionar uma atividade</p>
      <p></p>
    </div>
  </div>
<% end %>
